<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        # form view of standard_price in Product_form_view of product.template
        <record id="view_product_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//label[@for='standard_price']" position="before">
                    <field name="floor_no"/>
                    <field name="type_id"/>
                    <field name="price"/>
                    <field name="status"/>
                    <field name="surface"/>

                </xpath>
            </field>
        </record>

# form view of barcode in product_template_only_form_view of product.template

        <record id="view_product_form_main_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="project_no"/>
                    <field name="ref_no"/>
                    <field name="part"/>
                    <field name="building_no"/>

                    <label for="built_up_no"/>
                    <div class="o_row">
                        <field name="built_up_no"/><span>meter square</span>
                    </div>

                   <label for="carpet_area_no"/>
                    <div class="o_row">
                        <field name="carpet_area_no"/><span>meter square</span>
                    </div>

                    <label for="terrace_area_no"/>
                    <div class="o_row">
                        <field name="terrace_area_no"/><span>meter square</span>
                    </div>

                </xpath>
            </field>
        </record>

#tree view
        <record id="view_product_tree_inherit" model="ir.ui.view">
            <field name="name">product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="replace">
                    <field name="project_no"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="ref_no"/>
                </xpath>
                <xpath expr="//field[@name='list_price']" position="replace">
                    <field name="price"/>
                </xpath>
                <xpath expr="//field[@name='standard_price']" position="replace">
                    <field name="status"/>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="replace">
                    <field name="type_id"/>
                </xpath>
                 <xpath expr="//field[@name='type']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>
                <xpath expr="//field[@name='type_id']" position="after">
                    <field name="part"/>
                </xpath>
                <xpath expr="//field[@name='qty_available']" position="replace">
                    <field name="floor_no"/>
                </xpath>
                <xpath expr="//field[@name='virtual_available']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>

                <xpath expr="//field[@name='floor_no']" position="after">
                    <field name="building_no"/>
                </xpath>
                <xpath expr="//field[@name='building_no']" position="after">
                    <field name="surface"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>