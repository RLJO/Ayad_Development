<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="apartment_sales_wizard_view" model="ir.ui.view">
        <field name="name">Project Sales</field>
        <field name="model">apartment.sales.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="project" />
                    </group>
                </group>
                <footer>
                    <button name="print_apartment_sales_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel" />
                </footer>
            </form>

        </field>
    </record>

    <record id="action_apartment_sales_report_wizard" model="ir.actions.act_window">
        <field name="name">Project Sales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">apartment.sales.wizard</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="view_id" ref="apartment_sales_wizard_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_apartment_sales_wizard"
              name="Project Sales"
              parent="sale.menu_sale_report"
              action="action_apartment_sales_report_wizard"
    />

</odoo>
